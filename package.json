{
  "name": "react-real-location",
  "version": "1.0.0-beta.2",
  "description": "Get current location from react-router outside the Switch component",
  "author": "Jakub Biesiada",
  "license": "MIT",
  "main": "lib/react-real-location.cjs.js",
  "module": "lib/react-real-location.esm.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "prepack": "npm run clean && npm run prettier && npm run lint && npm run build",
    "clean": "rimraf lib/*",
    "build": "rollup -c",
    "test": "jest --coverage",
    "watch": "npm run build -- --watch",
    "watch:test": "npm run test -- --watch",
    "lint": "eslint 'src/**/*.ts' --fix",
    "prettier": "prettier --write 'src/**/*.ts'",
    "commit": "git-cz",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cool-hooks/react-real-location.git"
  },
  "keywords": [
    "react",
    "hooks",
    "router",
    "location",
    "path",
    "global",
    "url"
  ],
  "bugs": {
    "url": "https://github.com/cool-hooks/react-real-location/issues"
  },
  "homepage": "https://github.com/cool-hooks/react-real-location#readme",
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^11.0.0",
    "@testing-library/react": "^11.2.2",
    "@testing-library/react-hooks": "^3.6.0",
    "@types/jest": "^26.0.16",
    "@types/react": "^17.0.0",
    "@types/react-router": "^5.1.8",
    "@types/react-router-dom": "^5.1.6",
    "@typescript-eslint/parser": "^4.9.0",
    "cz-conventional-changelog": "3.3.0",
    "cz-emoji": "^1.3.1",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-prettier": "^3.2.0",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.5",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "react-test-renderer": "^17.0.1",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.29.0",
    "semantic-release": "^17.3.0",
    "semantic-release-gitmoji": "^1.3.4",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.2"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-router": "^5.2.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-emoji"
    }
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "npm run prettier",
      "npm run lint"
    ]
  }
}
